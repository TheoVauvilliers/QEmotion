<h1 class="text-center title">Login</h1>

<hr>

<%= form_tag '/users/login' do %>
  <div class="form-group">
    Email: <%= email_field_tag :email, "", class: "form-control", placeholder: "Enter your Email" %>
  </div>

  <div class="form-group">
    Password: <%= password_field_tag :password, "", class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Log in", class: "btn btn-warning" %>
  </div>

<% end %>