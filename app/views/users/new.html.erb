<h1 class="text-center title">Register</h1>

<hr>

<%= form_for :user, url: '/users/signup' do |form| %>
  <div class="form-group">
    Name: <%= form.text_field :name, class: "form-control", placeholder: "Enter your name" %>
  </div>

  <div class="form-group">
  Email: <%= form.email_field :email, class: "form-control", placeholder: "Enter your Email" %>
  </div>

  <div class="form-group">
  Password: <%= form.password_field :password, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="form-group">
  Password Confirmation: <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Enter your password" %>
  </div>

  <div class="form-group">
  <%= form.submit "Register", class: "btn btn-warning" %>
  </div>

<% end %>